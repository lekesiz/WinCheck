<Page
    x:Class="WinCheck.App.Views.ServiceOptimizerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:WinCheck.Core.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">
            <!-- Header Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="Service Optimizer" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Optimize Windows services for better performance"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          TextWrapping="Wrap" />
            </StackPanel>

            <!-- Summary Card -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                   BorderThickness="1"
                   CornerRadius="8"
                   Padding="24">
                <StackPanel Spacing="12">
                    <TextBlock Text="Optimizable Services" FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind ViewModel.OptimizableCount, Mode=OneWay}"
                              Style="{StaticResource HeaderTextBlockStyle}"
                              Foreground="{ThemeResource SystemAccentColor}" />
                </StackPanel>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Load Services"
                       Command="{x:Bind ViewModel.LoadDataCommand}"
                       Style="{StaticResource AccentButtonStyle}" />

                <Button Content="Optimize All"
                       Command="{x:Bind ViewModel.OptimizeAllCommand}" />

                <Button Content="Create Backup"
                       Command="{x:Bind ViewModel.CreateBackupCommand}" />

                <Button Content="Restore Backup"
                       Command="{x:Bind ViewModel.RestoreBackupCommand}" />
            </StackPanel>

            <!-- Status Message -->
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                      Foreground="{ThemeResource SystemAccentColor}"
                      TextWrapping="Wrap" />

            <!-- Services List -->
            <StackPanel Spacing="12">
                <TextBlock Text="Services to Optimize" Style="{StaticResource SubtitleTextBlockStyle}" />

                <ListView ItemsSource="{x:Bind ViewModel.Services, Mode=OneWay}"
                         SelectionMode="None"
                         MaxHeight="500">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:ServiceOptimization">
                            <Grid Padding="12">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="{x:Bind ServiceName}" FontWeight="SemiBold" />
                                    <TextBlock Text="{x:Bind Description}"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              TextWrapping="Wrap" />
                                    <TextBlock Foreground="{ThemeResource TextFillColorTertiaryBrush}">
                                        <Run Text="Current:" />
                                        <Run Text="{x:Bind CurrentStartMode}" />
                                        <Run Text=" → Recommended:" />
                                        <Run Text="{x:Bind RecommendedStartMode}" />
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <!-- Information Box -->
            <StackPanel Spacing="8"
                       Background="{ThemeResource LayerFillColorDefaultBrush}"
                       Padding="16"
                       CornerRadius="8">
                <TextBlock Text="ℹ️ Information" FontWeight="SemiBold" />
                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    Service optimization changes how Windows services start, reducing resource usage and improving boot times.
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
