<Page
    x:Class="WinCheck.App.Views.DiskCleanupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">
            <!-- Header Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="Disk Cleanup" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Scan and clean unnecessary files to free up disk space"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          TextWrapping="Wrap" />
            </StackPanel>

            <!-- Space Summary Card -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                   BorderThickness="1"
                   CornerRadius="8"
                   Padding="24">
                <StackPanel Spacing="12">
                    <TextBlock Text="Total Space Cleanable" FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind ViewModel.TotalCleanable, Mode=OneWay}"
                              Style="{StaticResource HeaderTextBlockStyle}"
                              Foreground="{ThemeResource SystemAccentColor}" />
                    <TextBlock Text="Click 'Scan Disk' to analyze your system"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              Visibility="{x:Bind ViewModel.Categories.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=inverse}" />
                </StackPanel>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Scan Disk"
                       Command="{x:Bind ViewModel.ScanCommand}"
                       IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                       Style="{StaticResource AccentButtonStyle}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ProgressRing Width="16" Height="16"
                                        IsActive="{x:Bind ViewModel.IsScanning, Mode=OneWay}"
                                        Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                            <TextBlock Text="Scan Disk" />
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button Content="Clean Now"
                       Command="{x:Bind ViewModel.CleanCommand}"
                       IsEnabled="{x:Bind ViewModel.Categories.Count, Mode=OneWay, Converter={StaticResource CountToBoolConverter}}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ProgressRing Width="16" Height="16"
                                        IsActive="{x:Bind ViewModel.IsCleaning, Mode=OneWay}"
                                        Visibility="{x:Bind ViewModel.IsCleaning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                            <TextBlock Text="Clean Now" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>

            <!-- Status Message -->
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                      Foreground="{ThemeResource SystemAccentColor}"
                      TextWrapping="Wrap" />

            <!-- Cleanup Categories -->
            <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.Categories.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}">
                <TextBlock Text="Cleanable Categories" Style="{StaticResource SubtitleTextBlockStyle}" />

                <ListView ItemsSource="{x:Bind ViewModel.Categories, Mode=OneWay}"
                         SelectionMode="None"
                         MaxHeight="400">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Grid Padding="12,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE74E;" FontSize="16"
                                         Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Grid.Column="1" Text="{Binding}" TextWrapping="Wrap" Margin="12,0,0,0" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <!-- Cleanup Options -->
            <StackPanel Spacing="12">
                <TextBlock Text="What Will Be Cleaned" Style="{StaticResource SubtitleTextBlockStyle}" />

                <StackPanel Spacing="8">
                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                           Padding="12"
                           CornerRadius="4">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Temporary Files" FontWeight="SemiBold" />
                            <TextBlock Text="System and user temporary files, cache files"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                           Padding="12"
                           CornerRadius="4">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Browser Caches" FontWeight="SemiBold" />
                            <TextBlock Text="Chrome, Edge, Firefox cache and temporary data"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                           Padding="12"
                           CornerRadius="4">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Windows Update Cache" FontWeight="SemiBold" />
                            <TextBlock Text="Old Windows Update installation files"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                           Padding="12"
                           CornerRadius="4">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Recycle Bin" FontWeight="SemiBold" />
                            <TextBlock Text="Permanently delete files in Recycle Bin"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Warning Box -->
            <StackPanel Spacing="8"
                       Background="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                       Padding="16"
                       CornerRadius="8">
                <TextBlock Text="⚠️ Warning" FontWeight="SemiBold" />
                <TextBlock TextWrapping="Wrap">
                    Cleanup operations cannot be undone. Make sure you have backed up any important files before proceeding.
                </TextBlock>
            </StackPanel>

            <!-- Information Box -->
            <StackPanel Spacing="8"
                       Background="{ThemeResource LayerFillColorDefaultBrush}"
                       Padding="16"
                       CornerRadius="8">
                <TextBlock Text="ℹ️ Information" FontWeight="SemiBold" />
                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    Disk cleanup helps free up space by removing temporary files, caches, and other unnecessary data.
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    Regular cleanup improves system performance and prevents disk space issues.
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
