<Page
    x:Class="WinCheck.App.Views.StartupManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:WinCheck.App.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">
            <!-- Header Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="Startup Manager" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Manage programs that start with Windows"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          TextWrapping="Wrap" />
            </StackPanel>

            <!-- Summary Cards -->
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Total Programs" FontWeight="SemiBold" FontSize="12" />
                        <TextBlock Text="{x:Bind ViewModel.TotalPrograms, Mode=OneWay}"
                                  Style="{StaticResource HeaderTextBlockStyle}"
                                  Foreground="{ThemeResource SystemAccentColor}" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="1"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Estimated Boot Time" FontWeight="SemiBold" FontSize="12" />
                        <TextBlock Text="{x:Bind ViewModel.EstimatedBootTime, Mode=OneWay}"
                                  Style="{StaticResource HeaderTextBlockStyle}"
                                  Foreground="{ThemeResource SystemAccentColor}" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="2"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Potential Saving" FontWeight="SemiBold" FontSize="12" />
                        <TextBlock Text="{x:Bind ViewModel.PotentialTimeSaving, Mode=OneWay}"
                                  Style="{StaticResource HeaderTextBlockStyle}"
                                  Foreground="#28A745" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Load Programs"
                       Command="{x:Bind ViewModel.LoadDataCommand}"
                       Style="{StaticResource AccentButtonStyle}" />

                <Button Content="Refresh"
                       Command="{x:Bind ViewModel.RefreshCommand}" />

                <Button Content="Disable Recommended"
                       Command="{x:Bind ViewModel.DisableAllRecommendedCommand}" />

                <Button Content="Enable All"
                       Command="{x:Bind ViewModel.EnableAllCommand}" />
            </StackPanel>

            <!-- Status Message -->
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                      Foreground="{ThemeResource SystemAccentColor}"
                      TextWrapping="Wrap" />

            <!-- Startup Programs List -->
            <StackPanel Spacing="12">
                <TextBlock Text="Startup Programs" Style="{StaticResource SubtitleTextBlockStyle}" />

                <ListView ItemsSource="{x:Bind ViewModel.StartupPrograms, Mode=OneWay}"
                         SelectionMode="None"
                         MaxHeight="500">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:StartupProgramViewModel">
                            <Grid Padding="12">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="{x:Bind DisplayName}" FontWeight="SemiBold" />
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="Publisher:" />
                                        <Run Text="{x:Bind PublisherText}" />
                                    </TextBlock>
                                    <TextBlock Foreground="{ThemeResource TextFillColorTertiaryBrush}">
                                        <Run Text="Impact:" />
                                        <Run Text="{x:Bind ImpactText}" />
                                        <Run Text=" | Location:" />
                                        <Run Text="{x:Bind LocationText}" />
                                        <Run Text=" | Delay:" />
                                        <Run Text="{x:Bind DelayText}" />
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                        <ToggleSwitch IsOn="{x:Bind IsEnabled, Mode=TwoWay}"
                                                     OnContent="Enabled"
                                                     OffContent="Disabled"
                                                     MinWidth="100" />
                                        <Button Content="Remove"
                                               Command="{x:Bind RemoveCommand}"
                                               FontSize="12" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <!-- Information Box -->
            <StackPanel Spacing="8"
                       Background="{ThemeResource LayerFillColorDefaultBrush}"
                       Padding="16"
                       CornerRadius="8">
                <TextBlock Text="ℹ️ Information" FontWeight="SemiBold" />
                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    Manage which programs start automatically with Windows to improve boot time and system performance.
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
