<Page
    x:Class="WinCheck.App.Views.ProcessMonitorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:WinCheck.Core.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">
            <!-- Header Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="Process Monitor" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Monitor running processes and system resource usage in real-time"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          TextWrapping="Wrap" />
            </StackPanel>

            <!-- System Resource Overview -->
            <Grid ColumnSpacing="16" RowSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- CPU Usage Card -->
                <Border Grid.Column="0"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="CPU Usage" FontWeight="SemiBold" />
                        <ProgressBar Value="{x:Bind ViewModel.CpuUsage, Mode=OneWay}"
                                    Maximum="100"
                                    Height="8" />
                        <TextBlock>
                            <Run Text="{x:Bind ViewModel.CpuUsage, Mode=OneWay}" />
                            <Run Text="%" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Memory Usage Card -->
                <Border Grid.Column="1"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Memory Usage" FontWeight="SemiBold" />
                        <ProgressBar Value="{x:Bind ViewModel.MemoryUsage, Mode=OneWay}"
                                    Maximum="100"
                                    Height="8" />
                        <TextBlock>
                            <Run Text="{x:Bind ViewModel.MemoryUsage, Mode=OneWay}" />
                            <Run Text="%" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Process Count Card -->
                <Border Grid.Column="2"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Active Processes" FontWeight="SemiBold" />
                        <TextBlock Text="{x:Bind ViewModel.ProcessCount, Mode=OneWay}"
                                  Style="{StaticResource TitleTextBlockStyle}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Start Monitoring"
                       Command="{x:Bind ViewModel.StartMonitoringCommand}"
                       IsEnabled="{x:Bind ViewModel.IsMonitoring, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                       Style="{StaticResource AccentButtonStyle}" />
                <Button Content="Stop Monitoring"
                       Command="{x:Bind ViewModel.StopMonitoringCommand}"
                       IsEnabled="{x:Bind ViewModel.IsMonitoring, Mode=OneWay}" />
                <Button Content="Terminate Selected"
                       Command="{x:Bind ViewModel.TerminateProcessCommand}"
                       IsEnabled="{x:Bind ViewModel.SelectedProcess, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}" />
            </StackPanel>

            <!-- Status Message -->
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                      Foreground="{ThemeResource SystemAccentColor}"
                      TextWrapping="Wrap" />

            <!-- Suspicious Processes Section -->
            <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.SuspiciousProcesses.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}">
                <TextBlock Text="Suspicious Processes Detected"
                          Style="{StaticResource SubtitleTextBlockStyle}"
                          Foreground="{ThemeResource SystemFillColorCriticalBrush}" />

                <ListView ItemsSource="{x:Bind ViewModel.SuspiciousProcesses, Mode=OneWay}"
                         MaxHeight="200"
                         SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:SuspiciousProcess">
                            <StackPanel Padding="8" Spacing="4">
                                <TextBlock Text="{x:Bind Metrics.Name}" FontWeight="SemiBold" />
                                <TextBlock Text="{x:Bind Description}"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <!-- Process List -->
            <StackPanel Spacing="12">
                <TextBlock Text="Running Processes" Style="{StaticResource SubtitleTextBlockStyle}" />

                <ListView ItemsSource="{x:Bind ViewModel.Processes, Mode=OneWay}"
                         SelectedItem="{x:Bind ViewModel.SelectedProcess, Mode=TwoWay}"
                         MaxHeight="400"
                         SelectionMode="Single">
                    <ListView.Header>
                        <Grid Padding="12,8" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="PID" FontWeight="SemiBold" />
                            <TextBlock Grid.Column="1" Text="Process Name" FontWeight="SemiBold" />
                            <TextBlock Grid.Column="2" Text="CPU %" FontWeight="SemiBold" />
                            <TextBlock Grid.Column="3" Text="Memory (MB)" FontWeight="SemiBold" />
                            <TextBlock Grid.Column="4" Text="Threads" FontWeight="SemiBold" />
                        </Grid>
                    </ListView.Header>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:ProcessMetrics">
                            <Grid Padding="12,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Bind ProcessId}" />
                                <TextBlock Grid.Column="1" Text="{x:Bind Name}" />
                                <TextBlock Grid.Column="2" Text="{x:Bind CpuUsage}" />
                                <TextBlock Grid.Column="3" Text="{x:Bind MemoryUsage}" />
                                <TextBlock Grid.Column="4" Text="{x:Bind ThreadCount}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <!-- Information Box -->
            <StackPanel Spacing="8"
                       Background="{ThemeResource LayerFillColorDefaultBrush}"
                       Padding="16"
                       CornerRadius="8">
                <TextBlock Text="ℹ️ Information" FontWeight="SemiBold" />
                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    Click 'Start Monitoring' to begin real-time process tracking. The monitor displays top processes by CPU usage.
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    Select a process and click 'Terminate Selected' to end it. Use caution when terminating system processes.
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
